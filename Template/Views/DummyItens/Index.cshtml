@model IEnumerable<Template.ViewModels.DummyItemViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DummyItemID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DummyDescription)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DummyItemID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DummyDescription)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DummyItemID }) |
            @Html.ActionLink("Details", "Details", new { id = item.DummyItemID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.DummyItemID })
            </td>
        </tr>
    }

</table>
